<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:layout_margin="@dimen/material_component_cards_space_between_cards"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusableInTouchMode="false"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.tomas.becomebasketballpro.ui.DynamicHeightNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:background="@color/material_grey_300"
        android:layout_height="wrap_content"
            android:layout_weight="2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/material_light_black"
            android:paddingLeft="@dimen/material_component_cards_left_and_right_padding"
            android:paddingRight="@dimen/material_component_cards_left_and_right_padding"
            android:paddingTop="@dimen/material_component_cards_top_and_bottom_padding" />

            <!--android:maxLines="2"-->

            <TextView
                android:id="@+id/article_data"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/material_grey_400"
                android:paddingLeft="@dimen/material_component_cards_left_and_right_padding"
                android:paddingRight="@dimen/material_component_cards_left_and_right_padding"
                android:paddingTop="@dimen/material_component_cards_top_and_bottom_padding"/>


        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/article_author"-->
        <!--style="@style/TextAppearance.AppCompat.Small"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ellipsize="end"-->
        <!--android:maxLines="1"-->
        <!--android:textColor="@color/material_light_white"-->
        <!--android:paddingBottom="@dimen/material_component_cards_top_and_bottom_padding"-->
        <!--android:paddingLeft="@dimen/material_component_cards_left_and_right_padding"-->
        <!--android:paddingRight="@dimen/material_component_cards_left_and_right_padding" />-->
    </LinearLayout>

</android.support.v7.widget.CardView>