<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_component_cards_space_between_cards"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="@color/material_grey_300"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="@dimen/material_component_cards_left_and_right_padding"
                android:paddingRight="@dimen/material_component_cards_left_and_right_padding"
                android:paddingTop="@dimen/material_component_cards_top_and_bottom_padding"
                android:textColor="@color/material_light_black" />

            <TextView
                android:id="@+id/text_data"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/material_component_cards_left_and_right_padding"
                android:paddingRight="@dimen/material_component_cards_left_and_right_padding"
                android:paddingTop="@dimen/material_component_cards_top_and_bottom_padding"
                android:textColor="@color/material_grey_400" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>